<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16sp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medicine Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        style="@style/DialogTitleStyle"
        android:layout_marginBottom="16sp"/>

    <EditText
        android:id="@+id/courseNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Number"
        style="@style/DialogTextStyle"
        android:inputType="text"/>

    <EditText
        android:id="@+id/medicineNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medicine Name"
        style="@style/DialogTextStyle"
        android:inputType="text"/>

    <EditText
        android:id="@+id/courseDurationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Duration"
        style="@style/DialogTextStyle"
        android:inputType="textMultiLine"/>

    <EditText
        android:id="@+id/frequencyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Frequency"
        style="@style/DialogTextStyle"
        android:inputType="textMultiLine"/>

    <EditText
        android:id="@+id/guidelinesEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Guidelines"
        style="@style/DialogTextStyle"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_gravity="center"
        android:layout_marginTop="16sp"/>

</LinearLayout>
